@page "/"

@using Models.Api;

<Row>
    <Column ColumnSize="ColumnSize.Is7">
        <Container IsFluid="true">
            <Card>
                <CardHeader>
                    <CardTitle>Quizes</CardTitle>
                </CardHeader>
                <CardBody>
                    <QuestionsTable OnSelectQuiz="QuizSelected" />
                </CardBody>
            </Card>
        </Container>
    </Column>
    <Column ColumnSize="ColumnSize.Is5">
        <QuizQuestionsView SelectedQuiz="SelectedQuiz" />
    </Column>
</Row>

@code {

    QuizDto SelectedQuiz { get; set; }

    void QuizSelected(QuizDto quiz)
    {
        SelectedQuiz = quiz;
        StateHasChanged();
    }

    QuizQuestionsView questionsView;
}